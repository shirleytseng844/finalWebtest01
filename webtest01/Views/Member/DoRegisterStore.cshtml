    <script src="~/Scripts/jquery.twzipcode.min.js"></script>
    <script src="~/Scripts/twzipcode.js"></script>
    <script>
        $('#twzipcode').twzipcode({
            'zipcodeIntoDistrict':true,
            'css': [
                'form-select border-3',
                'form-select border-3'
            ]

        });
        /*$("input[name='zipcode']").attr("readonly, true");*/
        let uploadfile;



        function upfile() {
            uploadfile = document.getElementById('uploadFile').files[0];
            let readFile = new FileReader();
            readFile.readAsDataURL(uploadfile);
            readFile.addEventListener('load', function () {
                let image = document.getElementById('CarPhoto');
                image.src = readFile.result;
                image.style.maxWidth = "200px";
                image.style.maxHeight = "200px";
             })
        }
        function doFirst() {
            // 跟 HTML 畫面產生關連，再建事件聆聽功能
            document.getElementById('uploadFile').onchange = upfile;

        }
        window.addEventListener('load', doFirst);




        function Register() {
            var Name = $('#UserName').val().trim();
            let Phone = $('#UserPhone').val();
            let Email = $('#UserEmail').val();
            let Pwd = $('#UserPwd').val();
            let PwdCk = $('#UserPwdck').val();
            let CarName = $('#CarName').val();
            let county = $("select[name='county']").val();
            let district = $("select[name='district']").val();
            let address = $('#address').val();

            if (Name == "" || Phone == "" || Email == "" || Pwd == "" || PwdCk == "" || CarName == "" || county == "" || address == "") {

                alert("請填入完整資料/輸入欄不可空白");
            } else {
                if (Pwd == PwdCk) {
                    const formData = new FormData();
                    formData.append("Name", Name);
                    formData.append("Phone", Phone);
                    formData.append("Email" ,Email);
                    formData.append("Pwd", Pwd);
                    formData.append("CarName", CarName,);
                    formData.append("county", county);
                    formData.append("district", district);
                    formData.append("address", address);


                    //var _array = [{ Name: Name, Phone: Phone, Email: Email, Pwd: Pwd, CarName: CarName, county: county, district: district, zipcode: zipcode, address: address }];
                    //var _Object = { RegisterInfo: _array };
                    //var json = JSON.stringify(_Object);


                    if (uploadfile != undefined) {

                        formData.append("imageFile", uploadfile);

                        $.ajax({
                            url: '@Url.Content("~/Member/DoRegisterStore")',
                            method: 'Post',
                            dataType: 'json',
                            data: formData,
                            processData: false,
                            contentType: false,
                            success: function (datas) {
                                if (datas.ErrMsg) {
                                    alert(datas.ErrMsg);
                                    return;
                                }
                                alert(datas.ResultMsg);
                            },
                            error: function (err) {
                                alert("123");
                            }
                        });


                    } else {
                        $.ajax({
                            url: '@Url.Content("~/Member/DoRegisterStore")',
                            method: 'Post',
                            dataType: 'json',
                            data: formData,
                            processData: false,
                            contentType: false,
                            success: function (datas) {
                                if (datas.ErrMsg) {
                                    alert(datas.ErrMsg);
                                    return;
                                }
                                alert(datas.ResultMsg);
                            },
                            error: function (err) {
                                alert(err.responseText + ',' + err.status);
                            }
                        });
                    }

                } else {
                     alert("請確認密碼是否一致!");
                }

            }
        }


