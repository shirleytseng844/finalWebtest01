                                                    <option>北區</option>
                                                    <option>中西區</option>
                                                    <option>東區</option>
                                                    <option>南區</option>
                                                    <option>安平區</option>
                                                    <option>安南區</option>
                                                </select>*@
                                            <input type="text" id="address" class="form-control" placeholder="請輸入地址" />
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fa fa-picture-o fa-2x me-3 fa-fw" aria-hidden="true"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="file" id="uploadFile" accept="image/png, image/jpeg"  />
                                            <label class="form-label" for="form3Example1c">請上傳餐車圖片(限Jpg/Png)</label>
                                            <p>
                                                <img src="" id="CarPhoto">
                                            </p>
                                        </div>

                                    </div>

                                </div>

                            </div>
                            <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                <button type="button" id="btnUpload" class="btn btn-primary btn-lg" onclick="Register()">註冊</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

